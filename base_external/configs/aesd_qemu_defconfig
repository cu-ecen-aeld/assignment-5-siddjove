BR2_aarch64=y

# Use internal Buildroot toolchain (glibc)
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y

# Linux headers same as kernel (6.1.x series)
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y

# Networking / system basics
BR2_SYSTEM_DHCP="eth0"
BR2_TARGET_GENERIC_ROOT_PASSWD="root"

# Post-image hook (as in assignment base)
BR2_ROOTFS_POST_IMAGE_SCRIPT="board/qemu/post-image.sh"
BR2_ROOTFS_POST_SCRIPT_ARGS="$(BR2_DEFCONFIG)"

# Linux kernel selection
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_VERSION=y
BR2_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.1.44"

# Use in-tree defconfig for qemu aarch64 virt
BR2_LINUX_KERNEL_USE_DEFCONFIG=y
BR2_LINUX_KERNEL_DEFCONFIG="virt"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Dropbear SSH server
BR2_PACKAGE_DROPBEAR=y

# Root filesystem as ext4
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y

# Host QEMU helper
BR2_PACKAGE_HOST_QEMU=y
BR2_PACKAGE_HOST_QEMU_SYSTEM_MODE=y

# Your AESD package
BR2_PACKAGE_AESD_ASSIGNMENTS=y

